<h1>School Dashboard</h1>
<%= link_to 'New School', new_school_path %>
<%= link_to 'Home', root_path %>
<br><br>
<table border="1" cellpadding="10">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th>Phone</th>
    <th colspan="3">Operations</th>
  </tr>

  <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.address %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.zipcode %></td>
        <td><%= school.phone %></td>
        <td><%= link_to 'Show', school_path(school) %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school_path(school),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>